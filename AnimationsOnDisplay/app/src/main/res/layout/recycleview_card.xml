<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="horizontal" android:background="@color/cardview_light_background">
        <ImageView android:id="@+id/card_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:src="@android:drawable/ic_lock_idle_low_battery"/>

        <TextView android:id="@+id/fragment_link"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>




</android.support.v7.widget.CardView>