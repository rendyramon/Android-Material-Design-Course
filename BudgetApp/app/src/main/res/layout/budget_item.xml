<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:id="@+id/cardview_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/cardview_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="8-12-15"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/cardview_label_expenses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/cardview_date"
            android:layout_below="@id/cardview_date"
            android:text="@string/expenses"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/cardview_expenses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardview_date"
            android:layout_toEndOf="@id/cardview_date"
            android:textSize="8pt" />

        <TextView android:id="@+id/cardview_label_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardview_label_expenses"
            android:layout_toStartOf="@id/cardview_date"
            android:text="@string/amount"
            android:textSize="8pt"/>

        <TextView
            android:id="@+id/cardview_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardview_label_expenses"
            android:layout_toEndOf="@id/cardview_date"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/cardview_label_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/cardview_date"
            android:layout_below="@id/cardview_label_amount"
            android:text="@string/budget"
            android:textSize="8pt" />

        <TextView
            android:id="@+id/cardview_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/cardview_date"
            android:layout_below="@id/cardview_label_amount"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>