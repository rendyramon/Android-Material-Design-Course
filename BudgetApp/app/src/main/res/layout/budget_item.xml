<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/cardview">
    <RelativeLayout android:id="@+id/cardview_relative_layout"
        android:layout_height="match_parent" android:layout_width="match_parent">

        <TextView android:id="@+id/cardview_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="24pt"/>

        <TextView android:id="@+id/cardview_expenses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardview_amount"
            android:layout_marginEnd="12dp"/>

        <TextView android:id="@+id/cardview_label_expenses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardview_expenses"
            android:layout_marginEnd="12dp"
            android:text="@string/expenses"/>

        <TextView android:id="@+id/cardview_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/cardview_expenses"/>

        <TextView android:id="@+id/cardview_label_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/cardview_label_expenses"
            android:text="@string/budget"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>