<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/silver</item>
        <item name="android:colorPrimaryDark">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12pt</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="red_label">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12pt</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="blue_label">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">12pt</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="green_label">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">12pt</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="alpha_label">
        <item name="android:textColor">@color/silver</item>
        <item name="android:textSize">12pt</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="hex_label">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12pt</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="name_edittext">
        <item name="android:textColor">@color/silver</item>
        <item name="android:textSize">12pt</item>
        <item name="android:layout_marginRight">24dp</item>
    </style>

    <style name="save_button">
        <item name="android:textSize">12pt</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
