<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/Peru</item>
        <item name="android:colorPrimaryDark">@color/Black</item>
        <item name="android:windowBackground">@color/Black</item>
        <item name="android:textColorPrimary">@color/Peru</item>
        <item name="android:textColorSecondary">@color/Peru</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:background">@color/Peru</item>
    </style>

    <style name="title">
        <item name="android:textSize">12pt</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="red_label">
        <item name="android:textColor">@color/Red</item>
        <item name="android:textSize">12pt</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="blue_label">
        <item name="android:textColor">@color/Blue</item>
        <item name="android:textSize">12pt</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="green_label">
        <item name="android:textColor">@color/Green</item>
        <item name="android:textSize">12pt</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="alpha_label">
        <item name="android:textColor">@color/Silver</item>
        <item name="android:textSize">12pt</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="hex_label">
        <item name="android:textSize">12pt</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="name_edittext">
        <item name="android:textSize">12pt</item>
        <item name="android:layout_marginRight">24dp</item>
    </style>

    <style name="save_button">
        <item name="android:textSize">12pt</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
