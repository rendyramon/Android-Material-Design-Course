<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:drawer_card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    drawer_card_view:cardBackgroundColor="#d5d5d3"
    drawer_card_view:cardCornerRadius="4dp"
    drawer_card_view:cardElevation="5dp">

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ellipsize="marquee"
        android:text="Title"
        android:textColor="#000000"
        android:textSize="14pt"
        android:textStyle="bold" />
</android.support.v7.widget.CardView>