<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:drawer_card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_card_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    drawer_card_view:cardBackgroundColor="@color/Black"
    drawer_card_view:cardCornerRadius="4dp"
    drawer_card_view:cardElevation="5dp">

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAlignment="center"
        android:textColor="@color/Peru"
        android:textSize="14pt"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>

</android.support.v7.widget.CardView>